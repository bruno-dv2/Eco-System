generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id              Int             @id @default(autoincrement())
  email           String          @unique
  senha           String
  nome            String
  dataCriacao     DateTime        @default(now())
  dataAtualizacao DateTime        @default(now())
  entradas        Entrada[]
  estoques        Estoque[]
  materiais       Material[]
  passwordResets  PasswordReset[]
  saidas          Saida[]
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  expiresAt DateTime
  usuarioId Int
  createdAt DateTime @default(now())
  usuario   Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)

  @@index([usuarioId], map: "PasswordReset_usuarioId_fkey")
}

model Material {
  id              Int       @id @default(autoincrement())
  nome            String
  descricao       String?
  unidade         String
  dataCriacao     DateTime  @default(now())
  dataAtualizacao DateTime  @default(now())
  usuarioId       Int
  entradas        Entrada[]
  estoque         Estoque?
  usuario         Usuario   @relation(fields: [usuarioId], references: [id])
  saidas          Saida[]

  @@unique([nome, usuarioId])
  @@index([usuarioId], map: "Material_usuarioId_fkey")
}

model Entrada {
  id         Int      @id @default(autoincrement())
  materialId Int
  quantidade Float
  preco      Float
  data       DateTime @default(now())
  usuarioId  Int
  material   Material @relation(fields: [materialId], references: [id])
  usuario    Usuario  @relation(fields: [usuarioId], references: [id])

  @@index([materialId], map: "Entrada_materialId_fkey")
  @@index([usuarioId], map: "Entrada_usuarioId_fkey")
}

model Saida {
  id         Int      @id @default(autoincrement())
  materialId Int
  quantidade Float
  data       DateTime @default(now())
  usuarioId  Int
  material   Material @relation(fields: [materialId], references: [id])
  usuario    Usuario  @relation(fields: [usuarioId], references: [id])

  @@index([materialId], map: "Saida_materialId_fkey")
  @@index([usuarioId], map: "Saida_usuarioId_fkey")
}

model Estoque {
  id         Int      @id @default(autoincrement())
  materialId Int      @unique
  quantidade Float
  precoMedio Float
  valorTotal Float
  usuarioId  Int
  material   Material @relation(fields: [materialId], references: [id])
  usuario    Usuario  @relation(fields: [usuarioId], references: [id])

  @@index([usuarioId], map: "Estoque_usuarioId_fkey")
}
